{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ESNEXT",
    "outDir": "./build"
  }
}
